<!DOCTYPE html>
<html>
  <head>
    <%- include layouts/header %>
    <%- include layouts/boxes %>
    <meta charset="utf-8">
    <style>
    table {
      font-family:Comic Extrabold, sans-serif;
      position: center;
    }

    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 1px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }
  </style>
  <title>Teacher</title>
  </head>

  <body>
  <center><h3>Teachers data</h3><center><br>
  <br><br>
  <a href="/teachers/add"><button type="Submit" name="Add">Add New Teacher</button></a>
  <center>
  <table>
    <tr>
      <th>No</th>
      <th>id</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Subject</th>
      <th colspan='2'></th>
    </tr>
    <% var sum=1;%>
    <% data_teacher.forEach(teacher =>{%>
    <tr>
      <td><%= sum++ %></td>
      <td><%= teacher.id %></td>
      <td><%= teacher.first_name %></td>
      <td><%= teacher.last_name %></td>
      <td><%= teacher.email %></td>
      <td><%= teacher.subject_name %></td>
      <td><td><a href="/teachers/edit/<%=teacher.id%>">Edit</a></td>
      <td> <a href="/teachers/delete/<%=teacher.id%>" onclick="return confirm('Are you sure want to delete this teacher?');">Delete</a></td>
    </tr>
      <%})%>
    </table>
  </center>
  </body>
</html>
