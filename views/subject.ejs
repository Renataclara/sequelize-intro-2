<!DOCTYPE html>
<html>
  <head>
    <%- include layouts/boxes %>
    <meta charset="utf-8">
    <style>
    table {
      font-family:Comic Extrabold, sans-serif;
      position: center;
    }

    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 1px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }
  </style>
  <%- include layouts/header %>
  </head>

  <body>
  <center><h3>Subject data</h3><center><br>
  <br><br>
  <center>
  <table>
    <tr>
      <th>id</th>
      <th>Subject Name</th>
      <th>Teachers</th>
      <th>Actions</th>
      <th colspan='2'></th>
    </tr>
    <% data_subject.forEach(subject =>{%>
    <tr>
      <td><%= subject.id %></td>
      <td><%= subject.subject_name %></td>
      <td>
          <ol type="1">
          <% subject.first_name.forEach(name =>{%>
          <li> <%= name %> </li>
          <%})%>
          </ol>
      </td>
      <td><a href="/subjects/enrolledstudents/<%=subject.id%>">Enrolled Students</a></td>
    </tr>
      <%})%>
    </table>
  </center>
  </body>
</html>
